    // Version 1.4: Function to get current score data from DOM elements
    getCurrentScoreData() {
        const scores = {};
        let total = 0;
        
        // Get scores from DOM elements
        for (let i = 1; i <= 5; i++) {
            const scoreElement = document.getElementById(`mot${i}-score`);
            if (scoreElement) {
                const score = parseInt(scoreElement.textContent) || 0;
                scores[`mot${i}`] = score;
                total += score;
            } else {
                scores[`mot${i}`] = 0;
            }
        }
        
        return {
            scores: scores,
            total: total
        };
    }
    
